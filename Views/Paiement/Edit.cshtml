@model spaV1.Models.Paiement

@{
    ViewData["Title"] = "Modifier un Paiement";
}

<h1>Modifier un Paiement</h1>

<div class="row">
    <div class="col-md-6">
    <form id="paiementEditForm" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.ModelErrors != null)
            {
                <div class="alert alert-danger" role="alert">
                    <ul>
                        @foreach (var err in (IEnumerable<string>)ViewBag.ModelErrors)
                        {
                            <li>@err</li>
                        }
                    </ul>
                </div>
            }

            <div class="form-group">
                <label asp-for="DatePaiement" class="control-label">Date du Paiement</label>
                <input asp-for="DatePaiement" class="form-control" type="datetime-local" />
                <span asp-validation-for="DatePaiement" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Montant" class="control-label">Montant</label>
                <input asp-for="Montant" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Montant" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RendezVousId" class="control-label">Rendez-vous</label>
                <select asp-for="RendezVousId" class="form-control" asp-items="ViewBag.RendezVous"></select>
                <span asp-validation-for="RendezVousId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function(){
            const f = document.getElementById('paiementEditForm');
            if (!f) return;
            f.addEventListener('submit', function(e){
                console.log('paiementEditForm submit event fired');
                const btn = f.querySelector('button[type="submit"]');
                if (btn) btn.disabled = true;
            });
        })();
    </script>
}
