@model spaV1.Models.Paiement

@{
    ViewData["Title"] = "Supprimer un Paiement";
}

<h1>Supprimer un Paiement</h1>

<div>
    <h4>Paiement</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date du Paiement</dt>
        <dd class="col-sm-10">@Model.DatePaiement.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Montant</dt>
        <dd class="col-sm-10">@Model.Montant.ToString("C")</dd>

        <dt class="col-sm-2">Rendez-vous</dt>
        <dd class="col-sm-10">@Model.RendezVousId</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>
