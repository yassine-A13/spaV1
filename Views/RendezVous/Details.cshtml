@model spaV1.Models.RendezVous

@{
    ViewData["Title"] = "Détails du Rendez-vous";
}

<h1>Détails du Rendez-vous</h1>

<div>
    <h4>Rendez-vous</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">@Model.User?.Nom @Model.User?.Prenom</dd>

        <dt class="col-sm-2">Service</dt>
        <dd class="col-sm-10">@Model.Service?.NomService</dd>

        <dt class="col-sm-2">Paiement</dt>
        <dd class="col-sm-10">@Model.Paiement?.Montant.ToString("C") ?? "Non réglé"</dd>
    </dl>

    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
        <a asp-action="Index" class="btn btn-secondary">Retour</a>
    </p>
</div>
