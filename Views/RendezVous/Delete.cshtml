@model spaV1.Models.RendezVous

@{
    ViewData["Title"] = "Supprimer un Rendez-vous";
}

<h1>Supprimer un Rendez-vous</h1>

<div>
    <h4>Rendez-vous</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">@Model.User?.Nom @Model.User?.Prenom</dd>

        <dt class="col-sm-2">Service</dt>
        <dd class="col-sm-10">@Model.Service?.NomService</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>
