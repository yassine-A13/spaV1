@model spaV1.Models.Service

@{
    ViewData["Title"] = "Créer un Service";
}

<h1>Créer un Service</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NomService" class="control-label">Nom du Service</label>
                <input asp-for="NomService" class="form-control" />
                <span asp-validation-for="NomService" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TypeService" class="control-label">Type de Service</label>
                <input asp-for="TypeService" class="form-control" />
                <span asp-validation-for="TypeService" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prix" class="control-label">Prix</label>
                <input asp-for="Prix" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}