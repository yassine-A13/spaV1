@model IEnumerable<spaV1.Models.Service>

@{
    ViewData["Title"] = "Liste des services";
}

<h1>Liste des services</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Créer un service</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>NomService</th>
            <th>TypeService</th>
            <th>Prix</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="4">Aucun service trouvé.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.NomService</td>
                    <td>@item.TypeService</td>
                    <td>@item.Prix.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Modifier</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Voulez-vous supprimer ce service ?');">
                            <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
