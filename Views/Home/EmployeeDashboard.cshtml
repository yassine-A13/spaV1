@{
    ViewData["Title"] = "Tableau de Bord Employé";
}

<div class="container">
    <h2>Tableau de Bord Employé</h2>
    <h4>Bienvenue @ViewBag.UserName</h4>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Gestion des Rendez-vous
                </div>
                <div class="card-body">
                    <p>Gérer les rendez-vous des clients</p>
                    <a asp-controller="RendezVous" asp-action="Index" class="btn btn-primary">Gérer les Rendez-vous</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    Services Disponibles
                </div>
                <div class="card-body">
                    <p>Voir la liste des services proposés</p>
                    <a asp-controller="Service" asp-action="Index" class="btn btn-success">Voir les Services</a>
                </div>
            </div>
        </div>
    </div>
</div>