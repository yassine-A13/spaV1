@{
    ViewData["Title"] = "Accueil";
}

<div class="text-center">
    <h1 class="display-4">Bienvenue dans notre SPA</h1>
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Gérant</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="role" value="gerant" />
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" class="form-control" required />
                        </div>
                        <div class="form-group mt-2">
                            <label>Mot de passe</label>
                            <input type="password" name="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Connexion Gérant</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3>Employé</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="role" value="employee" />
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" class="form-control" required />
                        </div>
                        <div class="form-group mt-2">
                            <label>Mot de passe</label>
                            <input type="password" name="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-success mt-3">Connexion Employé</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3>Client</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="role" value="client" />
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" class="form-control" required />
                        </div>
                        <div class="form-group mt-2">
                            <label>Mot de passe</label>
                            <input type="password" name="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-info mt-3">Connexion Client</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <p>Nouveau client ? <a asp-controller="Users" asp-action="Create" class="btn btn-outline-primary">Créer un compte</a></p>
    </div>
</div>
